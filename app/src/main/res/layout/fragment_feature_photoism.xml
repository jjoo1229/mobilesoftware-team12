                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="90dp"
                android:text="Special Frame"
                android:textSize="30dp"/>

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="220dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/photoism_colab" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="57dp"
                        android:background="@drawable/photoism_colab_1" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/photoism_colab_2" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/photoism_colab_3" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/photoism_colab_4" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/photoism_colab_5" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/photoism_colab_6" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/photoism_colab_7" />
                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="BTS Presents Everywhere"
                android:textSize="22dp"
                app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
                tools:layout_editor_absoluteX="-16dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="colab with BTS"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2023.06.01~"
                android:textSize="13dp"
                app:layout_constraintTop_toBottomOf="@+id/textView12"
                tools:layout_editor_absoluteX="0dp" />


        </LinearLayout>


    </ScrollView>


</LinearLayout>