<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    >

    <LinearLayout
        android:id="@+id/linear_location"
        android:layout_width="195dp"
        android:layout_height="130dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="60dp"
        android:background="@color/white"
        android:clickable="true"
        android:onClick="onLinearLocationClick"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:onClick="onLinearLocationClick"
            app:srcCompat="@android:drawable/ic_menu_mylocation" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:text="사진관별 위치"
            android:clickable="true"
            android:onClick="onLinearLocationClick"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/image_feature"
        android:layout_width="195dp"
        android:layout_height="130dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:clickable="true"
        android:onClick="onLinearFeatureClick">


        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="72dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="30dp"
            android:clickable="true"
            android:onClick="onLinearFeatureClick"
            app:srcCompat="@android:drawable/ic_menu_camera" />
        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="57dp"
            android:text="사진관별 특징"
            android:clickable="true"
            android:onClick="onLinearFeatureClick"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/image_gallery"
        android:layout_width="195dp"
        android:layout_height="130dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:clickable="true"
        android:onClick="onLinearGalleryClick">


        <ImageView
            android:id="@+id/imageView25"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="72dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="30dp"
            android:clickable="true"
            android:onClick="onLinearGalleryClick"
            app:srcCompat="@android:drawable/ic_menu_gallery" />
        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="77dp"
            android:text="갤러리"
            android:clickable="true"
            android:onClick="onLinearGalleryClick"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/image_pose"
        android:layout_width="195dp"
        android:layout_height="130dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:clickable="true"
        android:onClick="onImagePoseClick">

        <ImageView
            android:id="@+id/imageView26"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="72dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="30dp"
            android:clickable="true"
            android:onClick="onImagePoseClick"
            app:srcCompat="@android:drawable/ic_menu_myplaces" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:text="포즈 추천"
            android:clickable="true"
            android:onClick="onImagePoseClick"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_log_out"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/img_logout" />

        <TextView
            android:id="@+id/text_log_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:text="Log out"
            android:layout_marginTop="15dp"
            android:textColor="@color/white" />


    </LinearLayout>

</LinearLayout>