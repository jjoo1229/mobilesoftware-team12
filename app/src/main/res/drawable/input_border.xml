<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background -->
    <item
        >
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- 내부 배경색 -->
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- 0으로 된 투명한 색상 -->
            <stroke
                android:width="1dp"
                android:color="#35000000"/> <!-- 테두리 색상 -->
            <corners android:radius="10dp"/>
        </shape>
    </item>

</layer-list>
